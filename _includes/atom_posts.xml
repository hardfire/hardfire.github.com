   {% assign count = 0 %}
   {% for post in theposts %}
      {% if count < 10 %}
   <item>
      <title>{{ post.title }}</title>
      <link>http://avinash.me{{ post.url }}</link>
      <author>Avinash Kundaliya</author>
      <pubDate>{{ post.date | date_to_xmlschema }}</pubDate>
      <guid>http://avinash.me{{ post.url }}</guid>
      <description><![CDATA[
         {{ post.content | expand_urls : site.url }}
      ]]></description>
   </item>
      {% assign count = count | plus:'1' %}
      {% endif %}
   {% endfor %}

   {% assign theposts = nil %}
